.steps-section
  background-image: url('../images/steps-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #dddddd

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 60px 0 50px 0
    +above($breakpoints.md)
      padding 90px 0 80px 0
    +above($breakpoints.xxl)
      padding 120px 0 103px 0

  &__img
    position: absolute
    width: 337px;
    height: 100px;
    bottom: 0;
    left: -286px;
    +above($breakpoints.sm)
      width: 410px;
      height: 132px;
      bottom: 0;
      left: -352px;
    +above($breakpoints.md)
      width: 538px;
      height: 181px;
      bottom: 0;
      left: -484px;
    +above($breakpoints.xxl)
      width 680px
      height: 223px
      bottom: 0
      left: -718px

  &__sub-title
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 20px 0 30px 0
    +above($breakpoints.md)
      padding 25px 0 35px 0
    +above($breakpoints.xxl)
      padding 30px 0 40px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: row
      flex-wrap: wrap
      justify-content start
      gap: 10px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 40px

  &__card
    width 280px !important
    background-color #F9F9F9
    border-radius: 20px
    padding 20px 10px 20px 15px
    +above($breakpoints.sm)
      width 235px !important
      height: 140px
      padding 25px 10px 20px 20px
    +above($breakpoints.md)
      width 308px !important
      height: 167px
      padding 30px 10px 25px 20px
    +above($breakpoints.xxl)
      height: 200px
      width 360px !important
      padding 40px 10px 36px 20px

  &__card-title
    display: flex
    flex-direction: row
    align-items: center
    gap: 10px
    padding-bottom 12px

  &__card-num
    width 25px
    height: 25px
    color: #fff
    background-color #A11403
    border-radius: 50%
    display: flex
    justify-content center
    align-items: center
    +above($breakpoints.md)
      width 32px
      height: 32px

  &__black-card
    position relative
    text-align: center
    display: flex
    align-items: center
    justify-content center
    width 100%
    height: 77px
    color: #fff
    background-color #000
    border-radius: 22px
    padding 0 15px
    +above($breakpoints.sm)
      padding 0
      position: absolute
      justify-content start
      padding-left 20px
      text-align: start
      width: 480px;
      height: 140px;
      bottom: 144px;
      right: 0px;
    +above($breakpoints.md)
      width: 636px;
      height: 167px;
      bottom: 190px;
      right: 0;
    +above($breakpoints.xxl)
      width 760px
      height: 200px
      bottom: 235px
      right: 0

  &__black-card-img
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      right: 0
      bottom: 0
      height: auto
      width 150px
    +above($breakpoints.md)
      width 230px
    +above($breakpoints.xxl)
      width 285px

.cards-height
  +above($breakpoints.xxl)
    height: 170px !important

.btn.steps-item
  width 260px !important
  height: 60px !important
  margin 20px auto 0
  +above($breakpoints.sm)
    margin 25px auto 0
    width 280px !important
    height: 70px !important
  +above($breakpoints.md)
    margin 30px auto 0
    width 320px !important
    height: 80px !important
  +above($breakpoints.xxl)
    margin 37px auto 0
    width 360px !important
    height: 95px !important
