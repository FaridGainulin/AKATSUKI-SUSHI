.header
  &__container
    display: flex
    flex-direction: row
    align-items: center
    justify-content space-between
    +above($breakpoints.xxl)
      align-items: flex-start

  &__brand
    display: flex
    flex-direction: column
    gap: 5px

  &__logo
    width 100px
    height: auto
    +above($breakpoints.sm)
      width 150px
    +above($breakpoints.md)
      width 180px
    +above($breakpoints.xxl)
      width 200px

  &__text
    display: none
    +above($breakpoints.sm)
      display: block

  &__connection
    display: flex
    flex-direction: row
    align-items: center
    gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__connection-icon
    width 16px
    height: 16px
    +above($breakpoints.md)
      width 24px
      height: 24px

